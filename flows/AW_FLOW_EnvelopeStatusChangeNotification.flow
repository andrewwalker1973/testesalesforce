        <locationY>0</locationY>
        <connector>
            <targetReference>AW_AdviserWorkbenchRecordType</targetReference>
        </connector>
        <filterLogic>1 AND (2 OR 3 OR 4)</filterLogic>
        <filters>
            <field>AW_Status__c</field>
