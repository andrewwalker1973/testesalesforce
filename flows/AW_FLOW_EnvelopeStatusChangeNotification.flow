            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>AW_Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Awaiting Signature</stringValue>
            </value>
        </filters>
        <filters>
            <field>AW_Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Declined</stringValue>
            </value>
        </filters>
        <filters>
            <field>AW_Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Completed - Document Signed</stringValue>
            </value>
        </filters>
        <object>AW_Envelope__c</object>
