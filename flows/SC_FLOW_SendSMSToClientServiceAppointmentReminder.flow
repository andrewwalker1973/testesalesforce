    <decisions>
        <name>SC_CheckSMS</name>
        <label>Check SMS</label>
        <locationX>380</locationX>
        <locationY>648</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>SC_CheckSMSDetails</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>SC_GetReminderSMS.DeveloperName</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>SC_ScheduleStartDateHourMin</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>SC_flowCurrentDateHourMin</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SC_GetEmailTemplate</targetReference>
            </connector>
            <label>Check SMS Details</label>
        </rules>
    </decisions>
    <decisions>
        <description>Check if Client Mobile number exists</description>
        <name>SC_CheckWorkOrderRecord</name>
        <label>Check Work Order Record)</label>
        <locationX>611</locationX>
        <locationY>408</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>SC_IfMobileNumberExists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>SC_GetWorkOrderRecord.Case.SC_CaseExtension__r.RSC_ClientCellNumber__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue></stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>SC_GetWorkOrderRecord.Case.RSC_ServiceType__r.Name</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Medical Appointment</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>SC_GetWorkOrderRecord.Case.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>RSC_Retail</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.RecordType.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>SC_ServiceAppointment</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SC_GetReminderSMS</targetReference>
            </connector>
            <label>If Mobile Number Exists</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>SC_flowCurrentDateHourMin</name>
        <dataType>String</dataType>
        <expression>LEFT(TEXT({!$Flow.CurrentDateTime} +1), 16)</expression>
    </formulas>
    <formulas>
        <name>SC_FlowCurrentDateTime</name>
        <dataType>DateTime</dataType>
