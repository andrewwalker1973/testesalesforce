    </formulas>
    <formulas>
        <name>SC_ScheduleStartDateHourMin</name>
        <dataType>String</dataType>
        <expression>LEFT(TEXT({!$Record.SchedStartTime}), 16)</expression>
    </formulas>
    <formulas>
        <description>Setting a variable for tomorrow&apos;s date</description>
        <name>SC_Tomorrow</name>
        <dataType>DateTime</dataType>
        <expression>{!$Record.SchedStartTime}</expression>
